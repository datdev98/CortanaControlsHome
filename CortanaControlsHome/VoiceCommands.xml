<?xml version="1.0" encoding="utf-8" ?>
<VoiceCommands xmlns="http://schemas.microsoft.com/voicecommands/1.2">
  <CommandSet xml:lang="en-us" Name="EnglishCommands-us">
    <CommandPrefix>My Cortana</CommandPrefix>
    <Example>Turn on the light in the living room</Example>
    <Command Name="OnOff">
      <Example>Turn on the light in the living room</Example>
      <ListenFor>Turn {state} the light in the {room}</ListenFor>
      <Feedback>Turning {state} the light...</Feedback>
      <Navigate/>
    </Command>
    <PhraseList Label="room">
      <Item>living room</Item>
      <Item>kitchen</Item>
      <Item>bedroom</Item>
      <Item>bathroom</Item>
    </PhraseList>
    <PhraseList Label="state">
      <Item>on</Item>
      <Item>off</Item>
    </PhraseList>
  </CommandSet>
</VoiceCommands>